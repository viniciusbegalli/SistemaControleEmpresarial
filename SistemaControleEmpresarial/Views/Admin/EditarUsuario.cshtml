@model SistemaControleEmpresarial.Models.ApplicationUser
@{
    ViewBag.Title = "EditarUsuario";
}
@Html.Raw(TempData["msgEditaUsuarios"])
<h2>Editar Usuario</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarUsuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="Id" name="Id" asp-for="Id" />
            <div class="form-group">
                C&oacute;digo
                <input asp-for="CodigoExterno" readonly="readonly" class="form-control" />
                <span asp-validation-for="CodigoExterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                Nome
                <input asp-for="NomeUsuario" class="form-control" />
                <span asp-validation-for="NomeUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                CPF
                <input asp-for="CPF" class="form-control"  onkeypress="MascaraCPF(this);" onblur="MascaraCPF(this);"/>
                <span asp-validation-for="CPF" class="text-danger" onkeypress="MascaraCPF(this);" onblur="MascaraCPF(this);"></span>
            </div>
            <div class="form-group">
                Telefone
                <input asp-for="Telefone" class="form-control" onkeypress="MascaraTelefone(this);" onblur="ValidaTelefone(this);" />
                <span asp-validation-for="Telefone" class="text-danger" onkeypress="MascaraTelefone(this);" onblur="ValidaTelefone(this);"></span>
            </div>
            <div class="form-group">
                <a asp-action="ListaUsuarios" asp-controller="Admin" class="btn btn-warning"><i class="glyphicon glyphicon-step-backward"></i> Voltar</a>
                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i> Salvar</button>
            </div>
        </form>
    </div>
</div>