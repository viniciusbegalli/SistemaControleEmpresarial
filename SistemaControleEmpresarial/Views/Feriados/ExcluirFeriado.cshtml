@model SistemaControleEmpresarial.Models.Feriado

@{
    ViewData["Title"] = "Delete";
}

<h2>Excluir Feriado</h2>

<h3>Tem certeza que deseja excluir este feriado ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Data do Feriado
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt>
            Descri&ccedil;&atilde;o do Feriado
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DescricaoFeriado)
        </dd>

    </dl>
    
    <form asp-action="ExcluirFeriado">
        <input type="hidden" asp-for="CodigoFeriado" />
        <a asp-action="ListaFeriados" asp-controller="Feriados" class="btn btn-warning"><i class="glyphicon glyphicon-step-backward"></i> Voltar</a>
        <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Confirmar Exclus&atilde;o</button>
    </form>
</div>
