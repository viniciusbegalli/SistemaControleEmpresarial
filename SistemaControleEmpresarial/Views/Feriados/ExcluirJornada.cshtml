@model SistemaControleEmpresarial.Models.SolicitacaoJornada

@{
    ViewData["Title"] = "ExcluirJornada";
}

<h2>Excluir Jornada</h2>

<h3>Tem certeza que deseja excluir esta jornada ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Descri&ccedil;&atilde;o do Feriado
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Feriado.DescricaoFeriado)
        </dd>
        <dt>
            Usu&aacute;rio
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.CodigoExterno) - @Html.DisplayFor(model => model.ApplicationUser.NomeUsuario)
        </dd>
        <dt>
            Justificativa
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Justificativa)
        </dd>
    </dl>

    <form asp-action="ExcluirJornada">
        <input type="hidden" asp-for="CodigoSolicitacaoJornada" />
        <a asp-action="ListaJornadas" asp-controller="Feriados" class="btn btn-warning"><i class="glyphicon glyphicon-step-backward"></i> Voltar</a>
        <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Confirmar Exclus&atilde;o</button>
    </form>
</div>